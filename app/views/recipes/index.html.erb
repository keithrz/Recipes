<h1>Listing recipes</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @recipes.each do |recipe| %>
  <tr>
    <td><%= recipe.title %></td>
    <td><%= recipe.content %></td>
    <td><%= link_to 'Show', recipe %></td>
    <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
    <td><%= link_to 'Destroy', recipe, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<div id="recipe-tabs">
	<ul>
    	<li><a href="#recipe-search"><span>One</span></a></li>
    	<li><a href="#recipe-new"><span>Two</span></a></li>
	</ul>
    <div id="recipe-search">First content</div>
    <div id="recipe-new">Second content</div>
</div>
